{
  "name": "giz-costing-tool-api",
  "version": "1.0.0",
  "description": "API for the GIZ Living Wage Costing Tool",
  "author": "UsMedia",
  "private": true,
  "root": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start --watch",
    "start:prod": "node dist/api",
    "start:db": "docker compose -f config/docker-compose.yml --env-file .env up",
    "start:beaver": "docker compose -f config/docker-compose.beaver.yml --env-file .env up",
    "lint": "eslint -c config/eslint.config.mjs '{src,apps,libs,test}/**/*.ts'",
    "test": "jest --config config/jest-unit.json && jest --config ./config/jest-e2e.json",
    "test:pre-clear": "npx mikro-orm migration:fresh && npm run test",
    "db:seed": "npx mikro-orm seeder:run",
    "db:fresh": "npx mikro-orm migration:fresh"
  },
  "dependencies": {
    "@getbrevo/brevo": "2.2.0",
    "@mikro-orm/core": "6.1.0",
    "@mikro-orm/migrations": "6.1.0",
    "@mikro-orm/nestjs": "5.2.3",
    "@mikro-orm/postgresql": "6.1.0",
    "@mikro-orm/reflection": "6.1.0",
    "@mikro-orm/seeder": "6.1.0",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.2.0",
    "@nestjs/core": "10.3.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.1",
    "@nestjs/swagger": "7.3.0",
    "@nestjs/terminus": "10.2.3",
    "@nestjs/throttler": "5.1.2",
    "@supercharge/request-ip": "1.2.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.7",
    "decimal.js": "10.5.0",
    "dotenv": "16.4.7",
    "exceljs": "4.4.0",
    "joi": "17.13.3",
    "lodash.clonedeep": "4.5.0",
    "mikro-orm": "6.4.7",
    "nanoid": "5.1.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "qrcode": "1.5.4",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.2",
    "speakeasy": "2.0.0",
    "url-template": "3.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/eslintrc": "3.3.0",
    "@eslint/js": "9.21.0",
    "@faker-js/faker": "9.5.1",
    "@mikro-orm/cli": "6.1.0",
    "@nestjs/cli": "10.3.1",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.1",
    "@stylistic/eslint-plugin-ts": "4.2.0",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.8",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/multer": "1.4.12",
    "@types/node": "22.13.9",
    "@types/passport-jwt": "4.0.1",
    "@types/qrcode": "1.5.5",
    "@types/speakeasy": "2.0.10",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.3",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": "22"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/domain/database/mikro-orm.config.ts"
    ]
  }
}
