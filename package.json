{
  "name": "giz-costing-tool-api",
  "version": "1.0.0",
  "description": "API for the GIZ Living Wage Costing Tool",
  "author": "UsMedia",
  "private": true,
  "root": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start --watch",
    "start:prod": "node dist/api",
    "start:db": "docker compose -f config/docker-compose.yml --env-file .env up",
    "start:beaver": "docker compose -f config/docker-compose.beaver.yml --env-file .env up",
    "lint": "eslint -c config/.eslintrc.js \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config config/jest-unit.json && jest --config ./config/jest-e2e.json",
    "test:pre-clear": "npx mikro-orm migration:fresh && npm run test",
    "db:seed": "npx mikro-orm seeder:run",
    "db:fresh": "npx mikro-orm migration:fresh"
  },
  "dependencies": {
    "@getbrevo/brevo": "2.1.1",
    "@mikro-orm/core": "6.1.0",
    "@mikro-orm/migrations": "6.1.0",
    "@mikro-orm/nestjs": "5.2.3",
    "@mikro-orm/postgresql": "6.1.0",
    "@mikro-orm/reflection": "6.1.0",
    "@mikro-orm/seeder": "6.1.0",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.2.0",
    "@nestjs/core": "10.3.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.1",
    "@nestjs/swagger": "7.3.0",
    "@nestjs/terminus": "10.2.3",
    "@nestjs/throttler": "5.1.2",
    "@supercharge/request-ip": "1.2.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.6",
    "decimal.js": "^10.4.3",
    "dotenv": "16.4.1",
    "exceljs": "4.4.0",
    "joi": "17.13.1",
    "lodash.clonedeep": "4.5.0",
    "mikro-orm": "6.1.0",
    "nanoid": "3.3.6",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "qrcode": "1.5.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "speakeasy": "2.0.0",
    "url-template": "2.0.8"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@mikro-orm/cli": "6.1.0",
    "@nestjs/cli": "10.3.1",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.1",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/node": "20.11.16",
    "@types/passport-jwt": "4.0.1",
    "@types/qrcode": "1.5.5",
    "@types/speakeasy": "2.0.10",
    "@types/supertest": "6.0.2",
    "@types/url-template": "2.0.28",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.0.4",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.10",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/domain/database/mikro-orm.config.ts"
    ]
  }
}
